@using HSCB.SingleTon
@using HSCB.Utilities
@model List<Context.Database.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1><b>
                        <div class="title">Danh Sách Danh mục</div></b>
                </h1>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <br/>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên</th>
                                    <th>Danh mục cha</th>
                                    <th>Tùy Chỉnh</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    long parentId = 0;
                                    if (item.ParentID != null)
                                    {
                                        parentId = item.ParentID.Value;
                                    }

                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@CategorySingleTon.GetName(Convert.ToInt32(parentId))</td>

                                        <td>@Html.ActionLink("Edit", "Edit", "Category", new {id = item.ID}, null)</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>

