@model PagedList.IPagedList<Context.Database.Contact>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Quản Lý Liên Hệ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="title">
                    <h1><b>Danh Sách Liên Hệ
                    </b></h1>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "Contact", FormMethod.Post))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-xs-8 col-md-4">
                                    <input type="text" value="@ViewBag.SearchString" name="searchString" placeholder="tìm kiếm theo tên" class="form-control"/>

                                </div>
                                <div class="col-xs-4 col-md-4">
                                    <button type="submit" class="btn btn-info">Tìm Kiếm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <br/>
                <div class="row">
                    <div class="col-xs-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th style="color:darkgreen">Tùy Chỉnh</th>
                                    <th style="color:darkgreen">ID</th>
                                    <th style="color:darkgreen">Tên</th>
                                    <th style="color:darkgreen">Số Điện thoại</th>
                                    <th style="color:darkgreen">Email</th>
                                    <th style="color:darkgreen">Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>
                                        @Html.ActionLink("Xóa", "Delete",new {id= item.ID}, new { onclick = "return confirm('Are you sure?');" })
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Email</td>
                                        <td>@item.Status</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                        </div>
                    </div>
                </div>
               
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
