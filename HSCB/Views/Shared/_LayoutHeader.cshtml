                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/images/logo.png" width="150" height="auto"/>
            </a>
        </div>
        <div class="navbar-collapse collapse ">
            <ul class="nav navbar-nav">
                <li class=""><a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i>&nbsp; Trang chủ</a></li>
                <li class="dropdown">
                    <a href="@Url.Action("Index","CompanyStory")" class="dropdown-toggle " data-toggle="dropdown" data-hover="dropdown" data-delay="0" data-close-others="false">
                        <i class="fa fa-history"></i>&nbsp; Câu chuyện HSCB <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("AboutUs","CompanyStory")">Về chúng tôi</a></li>
                        <li><a href="@Url.Action("DevelopmentPlan","CompanyStory")">Chiến lược phát triển</a></li>
                    </ul>
