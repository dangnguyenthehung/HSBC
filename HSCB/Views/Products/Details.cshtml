@model HSCB.Models.ProductViewModel
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid" id="product">
    <div class="" id="product-slider">
        @if (Model.ImagesList.Any())
        {
            <div class="owl-carousel owl-theme">
                @foreach (var item in Model.ImagesList)
                {
                    <div>
                        <img src="@item.Url" />
                    </div>
                }
            </div>
        }
    </div>
    
    <section class="callaction blue-background">
        <div class="">
            <div class="row">
                <div class="col-lg-12">
                    <div class="big-cta">
                        <div class="cta-text">
                            <h2 class="text-center">@Model.Content.Title</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


<div class="col-xs-12 col-md-10 col-md-offset-1">
    <div class="text-content">
        <div id="product-content">
            @Html.Raw(Model.Content.Detail)
        </div>
    </div>
</div>

@Html.Partial("_PartialProductContactInfo")

<script>
