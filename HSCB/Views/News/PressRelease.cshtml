@using Context.Utilities
@model List<Context.Database.Content>

@{
    ViewBag.Title = "Thông cáo báo chí";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="featured">
    <!-- start slider -->
    <div class="">
        <div class="row" style="margin-bottom: 0 !important">
            <div class="col-lg-12">
                <!-- Slider -->
                <div id="main-slider" class="flexslider box-shadow">
                    <ul class="slides">
                        <li>
                            <img src="~/Content/images/hscb/anh-ve-cong-ty/hscb.jpg" alt="" />
                        </li>
                    </ul>
                </div>
                <!-- end slider -->
            </div>
        </div>
    </div>
</section>
<section class="callaction padding-top-0">
    <div class="">
        <div class="row">
            <div class="col-lg-12">
                <div class="big-cta">
                    <div class="cta-text">
                        <h2>Thông cáo báo chí</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="news">
    <div class="col-xs-12" style="background-color: #fff;">
        <div class="row">
            <div class="col-xs-12">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        var mainTitle = item.Title;
                        var mainImg = item.Image;
                        var newLink = Url.Action("NewsDetails", "News", new { item.Id });

                        var mainContent = item.Detail.Truncate(225) + $"<a href='{newLink}'> Xem thêm </a></p>";

                        <div class="news-container">
                            <div class="row">
                                <div class="box box-shadow">
                                    <div class="box-gray aligncenter padding-bottom-10">
                                        <div class="col-xs-12 col-md-4">
                                            <div class="icon imageContainer imageContainer-large">
                                                <a href="@newLink">
                                                    <div class="img" style="background-image: url('@mainImg');"></div>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="col-xs-12 col-md-8">
                                            <a href="@newLink">
                                                <p>@mainTitle</p>
                                            </a>
                                            <div>
                                                @Html.Raw(mainContent)
                                            </div>
                                            <div class="col-xs-12 text-right">
                                                <i>@String.Format("{0:dd/MM/yyyy}", item.CreatedDate)</i>
                                            </div>
                                        </div>
                                        <div style="clear: both"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>


